<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92CACACA"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/home_admin"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#344F9B"
        android:text="@string/Admin"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/home_worker"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#344F9B"
        android:text="@string/worker"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/home_instruction"
        app:layout_constraintEnd_toEndOf="@+id/home_admin"
        app:layout_constraintStart_toStartOf="@+id/home_admin"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:elegantTextHeight="true"
        android:fontFamily="serif"
        android:text="@string/Company_name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0F0E0E"
        android:textColorHighlight="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/aguafina_script"
        android:text="@string/Welcome_message"
        android:textColor="#212020"
        android:textSize="48sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/home_admin"
        app:layout_constraintEnd_toEndOf="@+id/welcome_message"
        app:layout_constraintStart_toStartOf="@+id/welcome_message"
        app:layout_constraintTop_toBottomOf="@+id/welcome_message" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textColor="#090909"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/home_worker"
        app:layout_constraintEnd_toEndOf="@+id/home_admin"
        app:layout_constraintStart_toStartOf="@+id/home_admin"
        app:layout_constraintTop_toBottomOf="@+id/home_admin" />

    <TextView
        android:id="@+id/home_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:text="@string/home_instructions"
        android:textColor="#141414"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/home_worker"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/home_worker"
        app:layout_constraintTop_toBottomOf="@+id/home_worker" />
</androidx.constraintlayout.widget.ConstraintLayout>